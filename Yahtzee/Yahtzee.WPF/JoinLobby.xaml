<Window x:Class="Yahtzee.WPF.JoinLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yahtzee.WPF"
        mc:Ignorable="d"
        Title="JoinLobby" Height="500" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF3B40B8" Offset="0.839"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="lbxLobbies" Margin="106,46,106,67"/>
        <Button x:Name="btnJoinLobby" Content="Join" HorizontalAlignment="Left" Margin="204,431,0,0" VerticalAlignment="Top" Background="White" Height="26" Width="92" FontWeight="Bold" Click="btnJoinLobby_Click"/>
        <Button x:Name="btnRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="492,431,0,0" VerticalAlignment="Top" Background="White" Height="26" Width="92" FontWeight="Bold" Click="btnRefresh_Click"/>
        <Label x:Name="Label" Content="Choose a Lobby" Margin="253,-7,253,382" Foreground="White" FontSize="36" FontWeight="Bold"/>

    </Grid>
</Window>
